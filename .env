# ---------------------------------------------------
# TELEGRAM SETTINGS
# ---------------------------------------------------
# Telegram API credentials (required)
API_ID=123456789
API_HASH=abcdef1234567890abcdef1234567890
# Optional: Saved session string
SESSION_NAME=
# Comma-separated list of Telegram channel IDs to monitor
TELEGRAM_CHANNEL_IDS=-100xxxxxxxxxx,-100yyyyyyyyyy

# ---------------------------------------------------
# TRADE SETTINGS
# ---------------------------------------------------
# Maximum percentage of account to use per trade
MAX_TRADE_PERCENT=5
# Enable trailing stop loss
USE_TRAILING_STOP=true
# Trailing stop percentage
TRAILING_STOP_PERCENT=20
# Default slippage for entry trades
DEFAULT_SLIPPAGE=3
# Higher slippage for exiting trades
EXIT_SLIPPAGE=5

# ---------------------------------------------------
# SAFETY CHECKS
# ---------------------------------------------------
# Enable token safety checks
ENABLE_SAFETY_CHECKS=true
# Minimum required liquidity in USD
MIN_LIQUIDITY_USD=5000
# Maximum acceptable price impact percentage
MAX_PRICE_IMPACT=10
# Minimum token age in seconds (5 minutes = 300 seconds)
MIN_TOKEN_AGE_SECONDS=300
# Blacklisted token addresses (comma-separated)
BLACKLISTED_TOKENS=

# ---------------------------------------------------
# SOLANA/JUPITER SETTINGS
# ---------------------------------------------------
# RPC endpoint (use a paid one for reliability)
RPC_ENDPOINT=https://api.mainnet-beta.solana.com
# Backup RPC endpoints (comma-separated)
BACKUP_RPC_ENDPOINTS=https://solana-api.projectserum.com
# Network (mainnet-beta or devnet)
NETWORK=mainnet-beta
# Hex-encoded wallet private key (KEEP THIS SECURE!)
WALLET_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
# USDC mint address (usually default is fine)
USDC_MINT_ADDRESS=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
# Priority fee for transactions in lamports
PRIORITY_FEE_LAMPORTS=10000

# ---------------------------------------------------
# DRY RUN / PAPER TRADING SETTINGS
# ---------------------------------------------------
# Enable paper trading mode (no real orders)
DRY_RUN=true
# Starting balance for paper trading in USDC
DRY_RUN_BALANCE=1000
# Price volatility percentage for simulation
DRY_RUN_PRICE_VOLATILITY=5

# ---------------------------------------------------
# NOTIFICATION SETTINGS
# ---------------------------------------------------
# Enable Telegram notifications for trades
ENABLE_NOTIFICATIONS=false
# Chat ID to send notifications to
NOTIFICATION_CHAT_ID=
# Optional Telegram bot token for fallback notifications
TELEGRAM_BOT_TOKEN=

# ---------------------------------------------------
# ADVANCED SETTINGS
# ---------------------------------------------------
# Order monitoring interval in milliseconds
MONITOR_INTERVAL_MS=10000
# Error retry delay in milliseconds
ERROR_RETRY_DELAY_MS=5000
# Maximum retries for operations
MAX_RETRIES=3
# Log level (debug, info, warn, error)
LOG_LEVEL=info