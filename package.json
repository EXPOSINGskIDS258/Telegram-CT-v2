{
  "name": "crestx",
  "version": "1.0.0",
  "description": "CrestX - Professional Solana Memecoin Trading Bot",
  "main": "index.js",
  "bin": {
    "crestx": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "setup": "node setup.js",
    "build-exe": "pkg . --targets node18-win-x64 --output dist/crestx.exe",
